@page
@model FastMarket.Pages.CartDetail.EditCartItemModel

@using Microsoft.AspNetCore.Identity
@using FastMarket.Auth.Models
@inject SignInManager<ApplicationUser> SignInMngr;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<a class="btn btn-primary btn-lg" asp-page="/CartDetail/Index" asp-route-userId=@SignInMngr.UserManager.GetUserId(User) > Back </a>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert-success" style=" color: red; height:30px ;font-size: 15px;font-family: 'Raleway Bold';">
        <strong>Alert : </strong>@TempData["AlertMessage"]

    </div>
}


<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <form method="post" enctype="multipart/form-data">
                                    <input hidden asp-for="@Model.EditedProduct.Id" />




                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="form3Example3"> Amount </label>
                                        <input asp-for="@Model.EditedProduct.Amount" type="number" class="form-control form-control-lg" />
                                    </div>

                                    <input hidden type="file" name="file" class="form-control-file" id="exampleFormControlFile1">



                                    <button class="btn btn-warning btn-lg" type="submit">update product</button>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

