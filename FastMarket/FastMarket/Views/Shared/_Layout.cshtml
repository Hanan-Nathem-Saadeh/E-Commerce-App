@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using FastMarket.Auth.Models
@inject SignInManager<ApplicationUser> SignInMngr;

<!DOCTYPE html>
<br />
<br />

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <header>   
@if (SignInMngr.IsSignedIn(User))
{

    <h1>@User.Identity.Name </h1>
    <form asp-controller="Auth" asp-action="LogOut"  method="post"> <button type="submit" >Logout</button></form>
}
else
{
<a asp-controller ="Auth" asp-action = "Index" >  <button>Log In</button> </a>
<a asp-controller ="Auth" asp-action = "SignUp" > <button>Sign Up</button></a>

}
    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>
