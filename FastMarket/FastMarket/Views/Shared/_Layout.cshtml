@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using FastMarket.Auth.Models
@inject SignInManager<ApplicationUser> SignInMngr;
@inject UserManager<ApplicationUser> userManager;

<!DOCTYPE html>
<br />
<br />

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <div class="navbar-header">

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="navbar-brand mt-2 mt-lg-0" href="#">
                                <img src="https://faststorestorage.blob.core.windows.net/images/Fastmarkets_Logo.jpg"
                                     height="25"
                                     alt="MDB Logo"
                                     loading="lazy" />
                            </a>
                            </li>
                            <!-- Left links -->
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Home </a>

                        <li class="nav-item">
                            <a asp-area="" asp-page="/Email/Index" class="navbar-brand"> Send Email </a>
                        </li>
                        <li class="nav-item">

                            <a asp-area="" asp-page="/CartCookie/Index" class="navbar-brand"> Cart </a>

                        </li>


                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->
               
                    <!-- SignInMngr -->
                <div class="navbar-nav ms-auto mb-2 mb-lg-0">
>
                    @if (SignInMngr.IsSignedIn(User))
                    {

                        <h6>@User.Identity.Name </h6>
                        <form asp-controller="Auth" asp-action="LogOut" method="post"> <button class="btn btn-warning btn-lg" type="submit">Log out</button></form>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Index">  <button class="btn btn-primary btn-lg " >Log In</button> </a>
                        <a asp-controller="Auth" asp-action="SignUp"> <button class="btn btn-primary btn-lg " >Sign Up</button></a>

                    }
                </div>
                </div>
            </div>
                <!-- Right elements -->
            </div>
</nav>

    <div>
        @RenderBody()
    </div>
</body>
</html>
