@model FastMarket.Models.Categories
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<a asp-controller="Categories" asp-action="Add"> Create New Category</a>
<br />






<h1> @Model.Name </h1>

<a class="btn btn-warning btn-lg" asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.Id"> Edit</a>

<a class="btn btn-danger btn-lg" asp-controller="Categories" asp-action="DeleteCategory" asp-route-id="@Model.Id"> Delete</a>
<a class="btn btn-primary btn-lg" asp-controller="Categories" asp-action="AddProductToCategories" asp-route-CategoryId="@Model.Id">  Add Product To Category</a>


<br />


<section style="background-color: #eee;">
    <div class="text-center container py-5">
        <h4 class="mt-4 mb-5"><strong>Product List</strong></h4>

        <div class="row">
            @foreach (var item in Model.categoriesProducts)
            {

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                             data-mdb-ripple-color="light">
                            <img src="@item.Product.ImageUri"
                                 class="w-100" />
                            <a href="#!">
                                <div class="mask">
                                    <div class="d-flex justify-content-start align-items-end h-100"></div>
                                </div>
                                <div class="hover-overlay">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </div>
                            </a>
                        </div>
                        <div class="card-body">

                            <h5 class="card-title mb-3">@item.Product.Name</h5>
                            <h5 class="card-title mb-3">@item.Product.Price</h5>

                            <h6 class="mb-3">@item.Product.Description</h6>
                             <a class="btn btn-primary btn-lg" asp-page="/CategPage/ProductDetails" asp-route-id=@item.Product.Id> Product Details </a>


                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</section>


