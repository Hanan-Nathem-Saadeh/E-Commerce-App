@model FastMarket.Models.CategoriesProduct
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<form asp-controller="Categories" asp-action = "AddProductToCategories" method ="post" enctype ="multipart/form-data">
    <input hidden asp-for="@Model.CategoriesId" />
<label>
    Name :
    <input asp-for="@Model.Product.Name" />
</label>
<label>
    Price :
    <input asp-for="@Model.Product.Price" />
</label>
<label>
    Description :
    <input asp-for="@Model.Product.Description" />
</label>
<label>
    Amount :
    <input asp-for="@Model.Product.Amount" />
</label>
<label>
    Image :
    <input type="file" name ="file" />
</label>
    <button type="submit"> Add </button>

</form>
<div asp-validation-summary="All"></div>
