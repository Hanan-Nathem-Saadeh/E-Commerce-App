@model IEnumerable<FastMarket.Models.Categories>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

     <a asp-controller = "Categories" asp-action= "Add"> Create New Category</a>
  
  <a asp-controller ="Home" asp-action = "Index" > <button>Back</button> </a>    
@foreach (var item in Model)
{
    <h1>Name : @item.Name </h1>
    <br />
    <h1>Details : @item.Details </h1>
    <br />
    

    <a asp-controller = "Categories" asp-action= "Edit" asp-route-id ="@item.Id" > Edit</a>
    
    <a asp-controller = "Categories" asp-action= "DeleteCategory" asp-route-id ="@item.Id" > Delete</a>
      <a asp-controller = "Categories" asp-action= "AddProductToCategories" asp-route-CategoryId = "@item.Id">  Add Product To Category</a>

    @foreach (var items in item.categoriesProducts)
   {
       <img src = "@items.Product.ImageUri" width = 100/> 

       <br />
       <h3>Name : @items.Product.Name</h3>
       <h3> Description : @items.Product.Description</h3>
       <h3> Price : @items.Product.Price</h3>
          <br />
              <a asp-controller="Product" asp-action="Update" asp-route-id=@items.ProductId>update Product</a>
                <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id=@items.ProductId > delete Product </a>
       <hr style="height:2px;width:400px;border-width:1px;">

   }

    <hr />

}

