@model IEnumerable<FastMarket.Models.Product>
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<br />
<a asp-controller="Product" asp-action="addproductView"> Add </a>


<hr />


@foreach (var item in Model)
{  
    <img src ="@item.ImageUri" width = 200 />
    <br />
    <h1> Name : @item.Name </h1>
    <br />
    <h2>Description : @item.Description</h2>
    <br />
    <h2>Price : @item.Price</h2>
    <br />
   
    <a asp-controller="Product" asp-action="Update" asp-route-id=@item.Id> update </a>
    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id=@item.Id> delete </a>
    <hr />
}


