@model IEnumerable<FastMarket.Models.Product>
@using FastMarket.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<br />


<h1 class="mt-4 mb-5"><strong>All Products</strong></h1>
<a class="btn btn-primary btn-lg " asp-controller="Product" asp-action="addproductView"> Add </a>
<br />

@if (TempData["AlertMessage"] !=null)
{
    <div  class="alert-success" style=" color: red; height:30px ;font-size: 15px;font-family: 'Raleway Bold';">
        <strong>Thank You ! </strong>@TempData["AlertMessage"]

    </div>
}
<br />

<section style="background-color: #eee;">
    <div class="text-center container py-5">

        <div class="row">
            @foreach (Product product in Model)
            {

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                             data-mdb-ripple-color="light">
                            <img style="height: 350px" src="@product.ImageUri"
                                 class="w-75" />
                            <a href="#!">
                                <div class="mask">
                                    <div class="d-flex justify-content-start align-items-end h-100"></div>
                                </div>
                                <div class="hover-overlay">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </div>
                            </a>
                        </div>
                        <div class="card-body">

                            <h5 class="card-title mb-3">Name: @product.Name</h5>
                            <h6 class="mb-3">@product.Description</h6>
                            <h5 class="card-title mb-3">Price: @product.Price</h5>



                            <a asp-page="/CategPage/ProductDetails" asp-route-id=@product.Id> <Button class="btn btn-primary btn-lg">Product Details </Button></a>
                            <a class="btn btn-primary btn-lg " asp-controller="Product" asp-action="Update" asp-route-id=@product.Id>update</a>
                            <a class="btn btn-danger btn-lg " asp-controller="Product" asp-action="DeleteProduct" asp-route-id=@product.Id> delete </a>


                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</section>






